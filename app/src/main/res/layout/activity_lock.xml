<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".view.LockActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="vertical"
    >

        <TextView android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@+id/tv_lock_title"
                  android:layout_gravity="center"
                  android:layout_marginTop="36dp"
                  android:textSize="18sp"
                  android:textColor="@color/black"
                  android:text="비 밀 번 호"
                  android:gravity="center"
        />

        <LinearLayout android:layout_width="200dp"  android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal"
                      android:layout_gravity="center"
                      android:layout_marginTop="50dp"
                      android:layout_marginBottom="80dp"
        >
            <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
            >
                <ImageView android:layout_width="28dp" android:layout_height="28dp"
                           android:id="@+id/iv_num1"
                           android:background="@drawable/oval_full_blue"
                           android:layout_centerInParent="true"
                           android:visibility="invisible"
                />
            </RelativeLayout>

            <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
            >
                <ImageView android:layout_width="28dp" android:layout_height="28dp"
                           android:id="@+id/iv_num2"
                           android:background="@drawable/oval_full_blue"
                           android:layout_centerInParent="true"
                           android:visibility="invisible"
                />
            </RelativeLayout>

            <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
            >
                <ImageView android:layout_width="28dp" android:layout_height="28dp"
                           android:id="@+id/iv_num3"
                           android:background="@drawable/oval_full_blue"
                           android:layout_centerInParent="true"
                           android:visibility="invisible"
                />
            </RelativeLayout>

            <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
            >
                <ImageView android:layout_width="28dp" android:layout_height="28dp"
                           android:id="@+id/iv_num4"
                           android:background="@drawable/oval_full_blue"
                           android:layout_centerInParent="true"
                           android:visibility="invisible"
                />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_margin="24dp"
                  android:orientation="vertical"
    >

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num1"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="1"
            />

            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num2"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="2"
            />

            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num3"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="3"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num4"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="4"
            />

            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num5"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="5"
            />

            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num6"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="6"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num7"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="7"
                      tools:ignore="NestedWeights"/>

            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num8"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="8"
            />

            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num9"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="9"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text=""
                      tools:ignore="NestedWeights"/>

            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:id="@+id/tv_num0"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="32sp"
                      android:gravity="center"
                      android:text="0"
            />

            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                            android:id="@+id/rv_delete"
                            android:layout_weight="1"
                            android:gravity="center"
            >

                <ImageView android:layout_width="32dp" android:layout_height="32dp"
                           android:src="@drawable/ic_delete_text"
                />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>