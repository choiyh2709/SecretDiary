<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".view.InfoSaveActivity">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:layout_margin="16dp"
                  android:layout_alignParentEnd="true"
                  android:orientation="horizontal">

        <TextView android:layout_width="20dp" android:layout_height="20dp"
                  android:id="@+id/tv_save_num1"
                  android:background="@drawable/oval_border_blue"
                  android:text="1"
                  android:textColor="@color/blue"
                  android:textSize="12sp"
                  android:gravity="center"
                  android:layout_marginEnd="6dp"
        />

        <TextView android:layout_width="20dp" android:layout_height="20dp"
                  android:id="@+id/tv_save_num2"
                  android:background="@drawable/oval_border_gray"
                  android:text="2"
                  android:textSize="12sp"
                  android:textColor="@color/grey"
                  android:gravity="center"
        />

    </LinearLayout>

    <com.photocard.secretdiary.custom.NonSwipeViewPager
            android:id="@+id/vp_save_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
    </com.photocard.secretdiary.custom.NonSwipeViewPager>

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/rl_next_btn"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
    >

        <ImageView android:layout_width="24dp" android:layout_height="24dp"
                   android:layout_margin="16dp"
                   android:src="@drawable/ic_arrow_forward_black_48dp"
                   android:textSize="14sp"
                   android:textColor="@color/white"
        />

    </RelativeLayout>

</RelativeLayout>