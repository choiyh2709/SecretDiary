<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.photocard.secretdiary.view.ViewerActivity"
        android:background="@color/white"
>

    <RelativeLayout
            android:id="@+id/rl_viewer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp">


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">


            <TextView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/tv_viewer_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="수정"
                    android:textColor="@color/lite_grey"
                    android:textSize="14sp" />

            <TextView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/tv_viewer_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/tv_viewer_modify"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="삭제"
                    android:textColor="@color/lite_grey"
                    android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/rl_viewer_toolbar">

        <RelativeLayout
                android:id="@+id/rl_viewer_date"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
        >

            <ImageView
                    android:id="@+id/iv_calender"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/calendar" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_view_date"
                      android:layout_toEndOf="@+id/iv_calender"
                      android:layout_centerVertical="true"
                      android:layout_marginStart="4dp"
                      android:textColor="@color/black"
                      android:text="2019.08.22"
                      android:textSize="14sp"
            />

            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:id="@+id/rv_weather"
                            android:layout_toEndOf="@+id/tv_view_date"
                            android:background="?attr/selectableItemBackground"
            >

                <ImageView
                        android:id="@+id/iv_weather"
                        android:layout_centerVertical="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:src="@drawable/sun"
                        android:textSize="14sp"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
                android:id="@+id/tv_viewer_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/tv_viewer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:maxLength="40"
                android:textColor="@color/black"
                android:textSize="16sp" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/back_line" />

        <jp.wasabeef.richeditor.RichViewer
                android:id="@+id/re_viewer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_viewer_title">

        </jp.wasabeef.richeditor.RichViewer>
        
    </LinearLayout>
</RelativeLayout>
