<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_weight="1"
              android:background="@color/white"
              android:orientation="horizontal">

    <RelativeLayout
            android:id="@+id/rl_editor_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <RelativeLayout
                android:id="@+id/rl_editor_heading_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="10dp">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_editor_header"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_editor_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <RelativeLayout
                android:id="@+id/rl_editor_bold_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_editor_bold"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_editor_italic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <RelativeLayout
                android:id="@+id/rl_editor_italic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_editor_italic"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_editor_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <RelativeLayout
                android:id="@+id/rl_editor_left_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/back_line"
                android:padding="10dp">

            <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_editor_left"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_editor_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <RelativeLayout
                android:id="@+id/rl_editor_center_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="10dp">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_editor_center"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_editor_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <RelativeLayout
                android:id="@+id/rl_editor_right_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="10dp">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_editor_right"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_editor_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_editor_image"/>

    </RelativeLayout>
</LinearLayout>